<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="vineet.kalpnil.uddhav.com.vukhotel.checkout">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="120dp"

    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="BILL"
        android:layout_gravity="center_horizontal|center_vertical"
        android:id="@+id/TEXT22" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ROOM RATES:  Rs.2500"
        android:textAlignment="center"
        android:id="@+id/roomrate"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FOOD:  Rs.2500"
        android:textAlignment="center"
        android:id="@+id/foodrate"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OTHERS:  Rs.2500"
        android:textAlignment="center"
        android:id="@+id/othersrate"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TOTAL BILL:  Rs.5000"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/rate"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How would you like to pay?"
        android:textAlignment="center"
        android:paddingTop="50dp"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:entries="@array/payment"
        android:id="@+id/pay"
        android:textAlignment="center"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/checkout"
        android:text=" PAY and CHECKOUT"
        android:background="@color/darkblue"
        android:textColor="@color/white"
        />
    </LinearLayout>

</LinearLayout>
